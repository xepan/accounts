					.col-md-3
						label
						strong Group:
						div
							cite {$group}{$group_id}
				.row.xepan-push
					.col-md-3
						label
						strong OpeningBalanceDr:
						div
							cite {$OpeningBalanceDr}
					.col-md-1
					.col-md-3
						label
						strong OpeningBalanceCr:
						div
							cite {$OpeningBalanceCr}
