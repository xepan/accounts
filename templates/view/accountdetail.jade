	.col-lg-12
		.main-box.clearfix
			header.main-box-header.clearfix
				h2 Create Ledger
			.main-box-body.clearfix
				{account_info}
				.row.xepan-push
					.col-md-3
						label
						strong Name:
						div
							cite {$name}
					.col-md-1
					.col-md-3
						label
						strong Display Name:
						div
							cite {$LedgerDisplayName}
