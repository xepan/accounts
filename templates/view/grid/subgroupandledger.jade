.xepan-grid.main-box.clearfix.atk-table.atk-table-zebra.atk-table-bordered(id='{$_name}', class='{$class}')
  | {Pannel}
  header.main-box-header.clearfix.atk-actions(class='{$class}')
    .row
      .col-md-4
        strong Parent Group : 
        span {$parent} 
      .col-md-4
        strong From Date : 
        span {$from_date} 
      .col-md-4
        strong To Date : 
        span {$to_date}
    .filter-block(style='100%')
      .pull-right {$grid_buttons} 
      .form-group.pull-right.xepan-filter-form
        span.form-control.pull-left {$quick_search}
  | {/Pannel}
  .main-box-body.clearfix.table
    table.table.user-list.table-hover(style='width:100%')
      | {header}
      thead
        | {cols}{col}
        th
          span Name  
        th
          span Amount DR  
        th
          span Amount CR
        th
          span Balance
        | {/}{/}
      | {/}
      |       {$subheader}
      tbody
        | {rows}{row}
        tr(data-id='{$id}', class='{$odd_even}')
          | {cols}
          td
            span(data-id='{$id}', data-type='{$type}', style='cursor:pointer; cursor: hand; max-width:600px;', class='{$class} {$type}') {$name}
          td
            span {$balancedr}                          
          td
            span {$balancecr}  
          td
            span {$balance}                        
          | {/}
        | {/}{/}
        |         {not_found}
        .row
          .col-md-12.text-center.alert.alert-warning(role='alert')
            span.icon-attention.fa.fa-exclamation-triangle   {$not_found_message}
        | {/}
      | {totals}
      tfoot
        tr.totals
          | {cols}{col}
          td({$tdparam}='')
            | {$content}
          |           {/}{/}
      | {/}
    .row
      .main-box-body.clearfix.table
        table.table.user-list.table-hover(style='width:100%')
          thead
            th(style='width:40%;')
            th(style='width:28%;')
            th(style='width:27%;')
          tbody
            tr(data-id='{$id}', class='{$odd_even}')
              td
              td {$dr}
              td {$cr}
    | {$Paginator}
style(type='text/css').
  .group {
  font-weight: bold;
  }