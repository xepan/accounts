.xepan-grid.main-box.clearfix.atk-table.atk-table-zebra.atk-table-bordered(id="{$_name}" class="{$class}")
    {Pannel}
    header.main-box-header.clearfix.atk-actions(class=" {$class} ")
        div.filter-block( style="100%")
            .pull-right {$grid_buttons}
            .pull-right {$Print}
            .form-group.pull-right.xepan-filter-form
                span(class="form-control pull-left")|{$quick_search}
                    i(class="fa fa-search search-icon")
    {/Pannel}
    .main-box-body.clearfix.table-responsive
        table.table.user-list.table-hover.footable.toggle-circle-filled(style="width:100%")
            {header}
            thead
                {cols}{col}
                th 
                    span SNo
                th(data-hide="phone")
                    span Created At
                th
                    span Voucher No
                th(data-hide="phone")
                    span Transaction Type
                th(data-hide="phone")
                    span Affected Ledger
                th
                    span Debit
                th
                    span Credit
                th
                    span Attachments
                th                                              
                {/}{/}
            {/}
            {$subheader}

            tbody
                {rows}{row}
                tr(class="{$odd_even}" data-id="{$id}")
                    {cols}
                    td 
                        {$s_no}
                    td
                        {$created_at}
                    td
                        {$voucher_no}
                    td
                        {$transaction_type}
                        div.user-subhead {$Narration}
                    td
                        {$related_ledger_name}
                    td
                        {$amountDr}
                        .xepan-push
                        small
                            {$currency_dr}
                            {$original_amount_dr}
                    td
                        {$amountCr}
                        .xepan-push
                        small
                            {$currency_cr}
                            {$original_amount_cr}
                    td.text-center
                        .do-view-attachment(style= "cursor:pointer; cursor: hand; max-width:600px;") {$attachment_icon}
                    td
                        {$edit}
                        {$delete}
                    {/}
                {/}{/}
                {not_found}
                div.row
                    .col-md-12.text-center.alert.alert-warning(role="alert")
                        span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
                {/}

            {totals}
            tfoot
                tr(class="totals")
                    {cols}{col}
                    <td {$tdparam}>
                    {$content}
                    </td>
                    {/}{/}
            {/}
        {$Paginator}
