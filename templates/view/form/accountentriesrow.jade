div(id="{$_name}" class="{$class}")
	.atk-box-large.atk-swatch-ink.atk-push-reset.atk-shape-rounded-top
		.main-box
			.main-box-body.clearfix
				form.form-group
					.row.xepan-push
						cite
							strong Code (Unique in Transaction - For Identification)
						.col-md-12.col-lg-12
							.atk-form-row.atk-form-field{$code}
					.row.xepan-push
						cite
							strong Title
						.col-md-12.col-lg-12
							.atk-form-row.atk-form-field{$title}
					.row.xepan-push
						.col-md-6.col-lg-6
							.panel.panel-primary.panel-heading.strong
								.xepan-push
								cite
									strong Side
								.atk-form-row.atk-form-field{$side}
								.xepan-push
								cite 
									strong  Group
								.atk-form-row.atk-form-field{$group}
								.xepan-push
								cite
									strong   Ledger
								.atk-form-row.atk-form-field{$ledger}
						.col-md-6.col-lg-6
							.panel.panel-primary.panel-heading.strong
								.xepan-push
								cite 
									strong  Balance Sheet (For New Groups)
								.atk-form-row.atk-form-field{$balance_sheet}
								.xepan-push
								cite 
									strong  Parent Group (For New Groups)
								.atk-form-row.atk-form-field{$parent_group}
								.xepan-push
								cite 
									strong  Ledger Type (For New Ledger)
								.atk-form-row.atk-form-field{$ledger_type}
					.row.xepan-push
						.col-md-4.col-lg-4
							cite
								strong   Ledger Changable
							.atk-form-row.atk-form-field{$is_ledger_changable}
						.col-md-4.col-lg-4
							cite
								strong   Allow Add Ledger
							.atk-form-row.atk-form-field{$is_allow_add_ledger}
						.col-md-4.col-lg-4
							cite
								strong   Include Curreny
							.atk-form-row.atk-form-field{$is_include_currency}
					.xepan-push-large
					.xepan-push-large
					hr
					a.xbtn.xbtn-primary.atk-swatch-tomato.atk-button-large.atk-col-5.w-shadow.action-large						
						{$FormButtons}